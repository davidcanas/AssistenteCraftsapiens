      <input type="text" id="duracao" name="duracao" placeholder="20min" minlength=2>
      <br><br>
      <label for="motivo">Motivo:</label>
      <br>
      <textarea name="motivo" id="motivo" cols="30" rows="5" placeholder="Comece a escrever o motivo da punição..."></textarea>
      <br><br>
      <input type="submit" class="btn btn-success" value="Registrar punição">
    </form>
